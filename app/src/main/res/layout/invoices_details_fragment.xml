<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="left">

            <TextView
                android:id="@+id/customer_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="customer name : "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="left">

            <TextView
                android:id="@+id/customer_phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="customer phone number : "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/customer_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="left">

            <TextView
                android:id="@+id/customer_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="customer address  :  "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/customer_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="left">

            <TextView
                android:id="@+id/customer_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assigning location :  "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/customer_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="18sp" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/delivered_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:text="Mark the invoice as delivered "
        android:textSize="20sp" />
    <TextView
        android:id="@+id/deliveredTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:text="result "
        android:textSize="18sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/locationB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="find the path"
        android:textSize="20sp"/>


</LinearLayout>